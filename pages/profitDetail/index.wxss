/* pages/profitDetail/index.wxss */
.profit_detail{
  padding: 30rpx;
  box-sizing: border-box;
}
.profit_date{
  margin-bottom: 30rpx;
}
.table_box{
  border: 1px solid #999999;
  box-sizing: border-box;
  border-bottom: 0;
}
.table_item{
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: nowrap;
  text-align: center;
  padding: 10rpx 0;
  border-bottom: 1px solid #cccccc;
}
.table_th{
  color: #333333;
  font-size: 32rpx;
  width: 25%;
}
.table_td{
  color: #999999;
  font-size: 28rpx;
  width: 25%;
}
ec-canvas{
  display: block;
  width: 100%;
  height: 400px;
}

.chart_btn{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 50rpx;
}
.chart_btn text{
  color: #333333;
  font-size: 28rpx;
}
.chart_btn text.active{
  color: #ff0000;
}