page {
  background: #f2f2f2;
}

.noVideo {
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.noVideo text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 33rpx;
  color: rgba(152, 152, 152, 1);
  margin-top: 20rpx;
}

.videoItem {
  padding: 20rpx;
  height: 150rpx;
  margin-bottom: 10rpx;
  background: #fff;
}

.videoItem .text {
  width: 530rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 43rpx;
  color: rgba(117, 117, 117, 1);
}

.videoItem .text .conter {
  color: rgba(33, 33, 33, 1);
}

.videoItem .text .buttons {
  width: 160rpx;
  height: 60rpx;
  background: rgba(55, 68, 74, 1);
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 28rpx;
  color: rgba(255, 255, 255, 1);
  padding: 0;
}
