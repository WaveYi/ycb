/* pages/recordList/index.wxss */
.nav_list{
  display: flex;
  justify-content: center;
  align-items: flex-start;
  margin-top: 30rpx;
}
.nav_list view{
  width: 30%;
  text-align: center;
  color: #000;
  font-size: 30rpx;
  border: 1px solid #737c81;
  padding: 10rpx 0;
  box-sizing: border-box;
  border-radius: 20rpx 20rpx 0 0;
}
.nav_list view.on{
  background: rgba(55, 68, 74, 1);
  color: #fff;
}

.nav_content{
  padding: 20rpx 5%;
  box-sizing: border-box;
}
.record_item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f1f1f1;
  padding: 20rpx 0;
}
.record_txt{
  color: #333333;
  font-size: 26rpx;
  width: 60%;
}
.record_time{
  font-size: 22rpx;
  color: #999999;
}