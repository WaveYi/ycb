/* pages/huiyibang/tableInfo/index.wxss */
.house_list_box{
  padding-bottom: 100rpx;
  margin-bottom: 48px;
}
.house_item{
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f1f1f1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.house_box{
  width: 70%;
  font-size: 22rpx;
}
.house_edit{
  width: 30%;
  text-align: right;
}
.house_edit button{
  font-size: 24rpx;
  margin-bottom: 5rpx;
}

.tabel_person{
  background-color: #ffffff;
  height: 600rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.scroll_item{
  border-bottom: 1px solid #f1f1f1;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  color: #666666;
  font-size: 24rpx;
}
.scroll_title{
  padding: 30rpx;
  box-sizing: border-box;
  text-align: center;
  color: #333333;
  font-size: 30rpx;
  border-bottom: 1px solid #f1f1f1;
}