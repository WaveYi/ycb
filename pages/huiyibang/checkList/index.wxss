/* pages/huiyibang/checkList/index.wxss */
.check_list_box{
  margin-bottom: 100rpx;
}
.house_item{
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f1f1f1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.house_item image{
  width: 100rpx;
  height: 100rpx;
  background-color: #cccccc;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.house_box{
  width: 60%;
  font-size: 22rpx;
}
.house_edit{
  width: 20%;
  text-align: right;
}
.house_edit button{
  font-size: 24rpx;
  margin-bottom: 5rpx;
}
.no_house{
  position: fixed;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #42a5f5;
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
  left: 0;
  bottom: 0;
  z-index: 1;
}