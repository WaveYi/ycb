/* pages/huiyibang/addMenu/index.wxss */
.form_box{
  padding: 30rpx;
  box-sizing: border-box;
}
.form_box .form_item{
  margin-bottom: 20rpx;
}
.form_box .form_item .form_txt{
  color: #999;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.form_box .form_item .form_txt .add{
  color: #42a5f5;
}
.form_box .form_item .form_content{
  margin-top: 10rpx;
  border: 1px solid #ccc;
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.djq_btn{
  text-align: center;
  color: #333333;
  font-size: 28rpx;
}
.djq_txt{
  font-size: 22rpx;
  color: #ff0000;
}
.video_sort{
  color: #333333;
  font-size: 24rpx;
  margin: 10rpx 0;
}
.form_box .form_item .form_content.noborder{
  border: 0;
}
.form_box .form_item .form_content.flexview{
  justify-content: flex-start;
  align-items: center;
}
.form_box .form_item .form_content.flexview picker{
  display: inline-block;
  margin-right: 30rpx;
}
.form_box .form_item .form_content input{
  font-size: 26rpx;
}
.form_box .form_item .form_content .add_box{
  width: 400rpx;
  height: 250rpx;
  border: 1px solid #ccc;
  position: relative;
  overflow: hidden;
}
.form_box .form_item .form_content .add_box.bg{
  width: 300rpx;
  height: 400rpx;
}
.form_box .form_item .form_content .add_box text{
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  font-size: 100rpx;
  font-weight: normal;
}
.form_box .form_item .form_content .add_box image{
  display: block;
  width: 100%;
  height: 100%;
}
.form_box .form_item .form_content textarea{
  width: 100%;
  height: 150rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

radio-group{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.weui-cell{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}
.weui-cell radio{
  transform: scale(0.7);
}