.title {
  font-size: 36rpx !important;
  color: #fff !important;
}

.navBar {
  background: #212121 !important;
}
.navBar .van-nav-bar__left{
  display: flex !important;
  align-items: center !important;
}
.navBar .van-icon-arrow-left{
  color: #ffffff !important;
  font-size: 24px !important;
}
.navBar .van-nav-bar__text{
  color: #ffffff !important;
  background: none !important;
}

video {
  margin-top: 64px;
  width: 100%;
  height: calc(100vh - 64px);
}

page {
  overflow: hidden;
}

.more_txt{
  position: fixed;
  right: 30rpx;
  top: 84px;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50%;
  background: #ffffff;
  color: #000000;
  font-size: 24rpx;
  border: 2rpx solid #cccccc;
}

.bind_box{
  padding: 30rpx 50rpx;
  box-sizing: border-box;
}
.bind_item{
  width: 400rpx;
  text-align: center;
}
.bind_item text{
  display: block;
  font-size: 30rpx;
  color: #999999;
  margin-bottom: 30rpx;
}
.bind_item button{
  margin-top: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}