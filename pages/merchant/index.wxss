/* pages/merchant/index.wxss */
.form_box{
  padding: 30rpx;
  box-sizing: border-box;
}
.title{
  padding-bottom: 15rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.form_box .form_txt text{
  color: #ff0000;
  font-size: 24rpx;
}
.form_box .form_item{
  margin-bottom: 20rpx;
}
.form_box .form_item.rule{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.form_box .form_item .submit_left{
  width: 70%;
}
.form_box .form_item .submit_right checkbox{
  transform: scale(0.8);
}
.form_box .form_item .form_txt{
  color: #999;
  font-size: 24rpx;
}
.form_box .form_item .form_content{
  margin-top: 10rpx;
  border: 1px solid #ccc;
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.form_box .form_item .form_content.noborder{
  border: 0;
}
.form_box .form_item .form_content input{
  font-size: 26rpx;
}
.form_box .form_item .form_content .add_box{
  width: 400rpx;
  height: 250rpx;
  border: 1px solid #ccc;
  position: relative;
  overflow: hidden;
}
.form_box .form_item .form_content .add_box.bg{
  width: 300rpx;
  height: 400rpx;
}
.form_box .form_item .form_content .add_box text{
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  font-size: 100rpx;
  font-weight: normal;
}
.form_box .form_item .form_content .add_box image{
  display: block;
  width: 100%;
  height: 100%;
}

button{
