.introduction {
  padding: 20rpx 30rpx;
  background: #fff;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 43rpx;
  color: rgba(44, 44, 44, 1);
}

.introduction text {
  display: block;
}

page {
  background: #f2f2f2;
  padding-bottom: 140rpx;
}

.videoList {
  margin-top: 10rpx;
}

.videoItem {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 10rpx 30rpx;
}

.videoItem .title {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 40rpx;
  color: rgba(33, 33, 33, 1);
  margin-bottom: 10rpx;
}

.videoItem .link {
  border: 1rpx solid #bdbdbd;
  overflow: hidden;
  padding: 6rpx;
  margin-bottom: 10rpx;
}

.videoItem .link .name {
  font-size: 24rpx;
  font-weight: 500;
  line-height: 33rpx;
  color: rgba(33, 33, 33, 1);
}

.btn {
  width: 640rpx;
  height: 60rpx !important;
  border-radius: 10rpx;
  display: block;
  margin: 20rpx auto 16rpx;
  font-size: 20rpx !important;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.btns {
  display: flex;
  justify-content: center;
}

.save {
  height: 140rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: -15rpx 0px 15rpx rgba(0, 0, 0, 0.16);
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 3;
}

.saveBtn {
  width: 640rpx;
  height: 88rpx !important;
  background: rgba(55, 68, 74, 1);
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 28rpx;
  color: rgba(255, 255, 255, 1);
}

.oldlink {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 33rpx;
  color: rgba(134, 134, 134, 1);
  word-break: keep-all;
  word-wrap: break-word;
}
