/* pages/videoInterests/index.wxss */
.code_item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.code_item image{
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin: 0 10rpx;
}
.code_item radio{
  transform: scale(.8);
}
.code_item .code_right{
  font-size: 24rpx;
  width: 500rpx;
}
.code_item .code_right view{
  margin-bottom: 8rpx;
}
.code_item .code_right view text{
  margin-right: 10rpx;
}
.code_item .code_right .num_btn{
  display: inline-block;
  padding: 8rpx 15rpx;
  box-sizing: border-box;
  background-color: #169bd5;
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 10rpx;
  margin-bottom: 0;
}

.add_bottom_btn{
  position: fixed;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  left: 0;
  bottom: 0;
  z-index: 5;
  background: #169bd5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.add_bottom_btn view{
  width: 100%;
}

.popup_box{
  width: 600rpx;
  padding: 50rpx;
  box-sizing: border-box;
}
.popup_title{
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.popup_title input{
  display: block;
  width: 100rpx;
}
.picker_box{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.picker_box button{
  padding: 0 20rpx;
  box-sizing: border-box;
}


.project_popup_box{
  white-space: nowrap;
  height: 500rpx;
  box-sizing: border-box;
  padding: 10rpx 0;
}
.project_header{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f1f1f1;
}
.p_cancel{
  color: #999999;
}
.p_txt{
  color: #333333;
}
.p_confirm{
  color: #09bb07;
}
.project_item{
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f1f1f1;
  font-size: 28rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.project_item radio{
  transform: scale(0.8);
  margin-right: 10rpx;
}