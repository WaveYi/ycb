/* pages/addVideo/index.wxss */
.video_box{
  padding: 30rpx;
  box-sizing: border-box;
}
.video_item{
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  border-bottom: 1px solid #cccccc;
  margin-bottom: 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}
.video_item.last{
  margin-bottom: 0;
  border-bottom: 0;
  padding-bottom: 0;
}
.video_item view{
  width: 80%;
}
.video_item view input{
  font-size: 26rpx;
}
.video_item textarea{
  display: block;
  width: 100%;
  height: 180rpx;
  resize: none;
  font-size: 26rpx;
  border: 1px solid #cccccc;
  box-sizing: border-box;
  padding: 10rpx;
  border-radius: 10rpx;
}
.video_txt{
  font-size: 26rpx;
  margin-right: 20rpx;
}
.video_num{
  color: #333333;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}