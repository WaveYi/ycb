/* pages/videoList/index.wxss */
.add_bottom_btn{
  position: fixed;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  left: 0;
  bottom: 0;
  z-index: 5;
  background: #169bd5;
}
.video_list_item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f1f1f1;
}
.video_list_item image{
  width: 450rpx;
  height: 220rpx;
  margin-right: 50rpx;
}
.video_list_info{
  width: 250rpx;
}
.video_list_info view{
  width: 100%;
  font-size: 26rpx;
  margin-bottom: 10rpx;
  word-wrap: break-word;
}
.video_list_item button{
  margin: 0;
}