/* components/promotionList.wxss */
.promotion_list_box{
  width: 100%;
  padding: 0 80rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
  position: absolute;
  left: 0;
  bottom: 15vh;
}
.promotion_list_box .promotion_item{
  width: 30%;
  margin-right: 5%;
}
.promotion_list_box .promotion_item:nth-child(3n){
  margin-right: 0;
}
.promotion_list_box .promotion_item .item_box{
  /* width: 200rpx; */
  padding: 5rpx 5rpx 10rpx;
  box-sizing: border-box;
  background: rgba(47,53,57,0.7);
  border-radius: 20rpx;
  text-align: center;
  margin-bottom: 50rpx;
}
.promotion_list_box .promotion_item .img{
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.promotion_list_box .promotion_item image{
  max-width: 100rpx;
  max-height: 100rpx;
}
.promotion_list_box .promotion_item text{
  display: block;
  color: #fff;
  font-size: 25rpx;
}
